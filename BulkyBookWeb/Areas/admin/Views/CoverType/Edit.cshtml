

@model CoverType

<h1>Edit</h1>

<form method="post" asp-action="Edit">
    <div class="border p-3 at-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit CoverType</h2>
        </div>
        <br />
        @* <div asp-validation-summary="All"></div>*@
        <div class="mb-3">          
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
